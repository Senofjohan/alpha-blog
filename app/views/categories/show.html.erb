<h1 align="center"><%= "Category: " + @category.name %></h1>
<div align="center">
  <% if logged_in? and current_user.admin? %>
  <div class="row">
    <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
  </div>
  <% end %>
  <%= will_paginate @category_problems %>
</div>
<!-- For this partial pass in problems as obj -->
<%= render 'problems/problem', obj: @category_problems %>
<div align="center">
  <%= will_paginate @category_problems %>
</div>