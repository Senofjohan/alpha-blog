<%= render 'shared/errors', obj: @user %>
<h1 align="center">Join us in solving problems</h1>

<div class='row'>
  <div class='col-xs-12'>
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :username %><br/>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, rows: 8, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-8" id="submitButton">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4 center">
    [ <%= link_to "Cancel and return to problems listing", problems_path %> ]
  </div>
</div>