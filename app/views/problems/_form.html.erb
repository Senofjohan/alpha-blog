<%= render 'shared/errors', obj: @problem %>

<div class='row'>
  <div class='col-xs-12'>
  <%= form_for(@problem, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of problem", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Body of problem" %>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-5 col-sm-8" id="submitButton">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
  </div>
  <% end %>
  <div class="col-xs-4 col-xs-offset-4 center">
    [ <%= link_to "Cancel and return to problems listing", problems_path %> ]
  </div>
</div>